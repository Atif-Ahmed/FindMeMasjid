<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/Green</item>
        <item name="colorPrimaryDark">@color/DarkerGreen</item>
        <item name="colorAccent">@color/Green</item>
        <item name="android:textColorHint">@color/VeryLightGreen</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="FullScreenTheme" parent ="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/Green</item>
        <item name="colorPrimaryDark">@color/DarkerGreen</item>
        <item name="colorAccent">@color/Green</item>
    </style>

    <style name="MyDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@drawable/background_repeat</item>
        <item name="android:autoLink">email</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/Green</item>
    </style>


    <style name="CustomLoadTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:bottomBright">@color/DarkerGreen</item>
        <item name="android:bottomDark">@color/DarkerGreen</item>
        <item name="android:bottomMedium">@color/DarkerGreen</item>
        <item name="android:centerBright">@color/DarkerGreen</item>
        <item name="android:centerDark">@color/DarkerGreen</item>
        <item name="android:centerMedium">@color/DarkerGreen</item>
        <item name="android:fullBright">@color/DarkerGreen</item>
        <item name="android:fullDark">@color/DarkerGreen</item>
        <item name="android:topBright">@color/DarkerGreen</item>
        <item name="android:topDark">@color/DarkerGreen</item>
    </style>



</resources>
