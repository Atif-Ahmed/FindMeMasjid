<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.genutek.find_me_masjid.LoginActivity"
    android:background="@drawable/background_repeat">

    <EditText
        android:layout_width="250dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_password"
        android:textColor="#000000"
        android:background="@android:drawable/edit_text"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText_email"
        android:layout_alignLeft="@+id/editText_email"
        android:layout_alignStart="@+id/editText_email"
        android:hint="@string/password"
        android:layout_height="40dp" />

    <Button
        android:text="@string/Login"
        android:id="@+id/button_signin"
        android:background="@drawable/button"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/editText_password"
        android:layout_alignRight="@+id/editText_password"
        android:layout_alignEnd="@+id/editText_password"
        android:layout_alignLeft="@+id/editText_password"
        android:layout_alignStart="@+id/editText_password"
        android:layout_width="150dp"
        android:textColor="@color/White"
        android:layout_height="40dp"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:onClick="onClick_Login"/>

    <EditText
        android:layout_width="250dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_email"
        android:textColor="@color/Green"
        android:background="@android:drawable/edit_text"
        android:hint="@string/email"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/signup_text"
        android:layout_width="wrap_content"
        android:id="@+id/button2"
        android:background="@null"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textColor="@color/White"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:onClick="onClick_Signup" />

    <Button
        android:text="@string/forgot_your_password"
        android:layout_width="wrap_content"
        android:id="@+id/button_signup"
        android:background="@null"
        android:layout_height="20dp"
        android:textColor="@color/White"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:layout_below="@+id/button_signin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <ImageView
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView_logo"
        android:contentDescription="@string/logo_image_desc"
        android:layout_marginBottom="30dp"
        android:layout_width="150dp"
        android:layout_above="@+id/editText_email"
        android:layout_alignLeft="@+id/button_signup"
        android:layout_alignStart="@+id/button_signup"
        android:layout_height="140dp" />

</RelativeLayout>
