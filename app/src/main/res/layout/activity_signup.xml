<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apps.genutek.find_me_masjid.SignupActivity"
    android:background="@drawable/background_repeat">

    <TextView
        android:text="@string/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_width="250dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText_newName"
        android:textColor="@color/Green"
        android:background="@android:drawable/edit_text"
        android:hint="@string/name"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_height="35dp"
        android:textSize="14sp" />

    <EditText
        android:layout_width="250dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_newPassword"
        android:textColor="@color/Green"
        android:background="@android:drawable/edit_text"
        android:hint="@string/password"
        android:layout_height="35dp"
        android:layout_below="@+id/editText_newEmail"
        android:layout_alignLeft="@+id/editText_newEmail"
        android:layout_alignStart="@+id/editText_newEmail"
        android:layout_marginTop="35dp"
        android:textSize="14sp" />

    <EditText
        android:layout_width="250dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_newEmail"
        android:textColor="@color/Green"
        android:background="@android:drawable/edit_text"
        android:hint="@string/email"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/editText_newName"
        android:layout_alignLeft="@+id/editText_newName"
        android:layout_alignStart="@+id/editText_newName"
        android:textSize="14sp" />

    <TextView
        android:text="@string/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/editText_newName"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="@string/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView6"
        android:layout_below="@+id/editText_newEmail"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:text="@string/signup"
        android:id="@+id/button_signup"
        android:background="@drawable/button"
        android:layout_width="150dp"
        android:textColor="@color/White"
        android:layout_height="40dp"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp" />

    <TextView
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/editText_newEmail"
        android:layout_alignLeft="@+id/editText_newName"
        android:layout_alignStart="@+id/editText_newName" />

</RelativeLayout>
